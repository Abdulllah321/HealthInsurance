@model HealthInsurance.Entities.CompanyDetails

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-3xl font-bold mb-6">Create Company</h1>

<h4 class="text-xl font-semibold mb-4">Company Details</h4>
<hr class="mb-6 border-t-2 border-gray-300" />

<div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-8">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-6"></div>

        <div class="mb-6">
            <label for="CompanyName" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Company Name</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="CompanyName" id="CompanyName" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Company Name" />
                <span asp-validation-for="CompanyName" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Address" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Address</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Address" id="Address" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Address" />
                <span asp-validation-for="Address" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Phone" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Phone</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Phone" id="Phone" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Phone" />
                <span asp-validation-for="Phone" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="CompanyURL" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Company URL</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="CompanyURL" id="CompanyURL" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Company URL" />
                <span asp-validation-for="CompanyURL" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="flex justify-end mb-4">
            <input type="submit" value="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out" />
        </div>
    </form>
</div>

<div class="mt-6 text-center">
    <a asp-action="Index" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
