@model HealthInsurance.Entities.CompanyDetails

@{
    ViewData["Title"] = "Company Details";
}

<div class="container mx-auto p-6">
    <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-8">Company Details</h1>

    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-8">
        <h4 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-6">Company Information</h4>
        <hr class="border-gray-200 dark:border-gray-700 mb-6" />
        <dl class="space-y-4">
            <div class="flex items-center">
                <dt class="w-1/3 font-medium text-gray-600 dark:text-gray-400 text-lg">Company Name:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-200 text-lg">@Html.DisplayFor(model => model.CompanyName)</dd>
            </div>
            <div class="flex items-center">
                <dt class="w-1/3 font-medium text-gray-600 dark:text-gray-400 text-lg">Address:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-200 text-lg">@Html.DisplayFor(model => model.Address)</dd>
            </div>
            <div class="flex items-center">
                <dt class="w-1/3 font-medium text-gray-600 dark:text-gray-400 text-lg">Phone:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-200 text-lg">@Html.DisplayFor(model => model.Phone)</dd>
            </div>
            <div class="flex items-center">
                <dt class="w-1/3 font-medium text-gray-600 dark:text-gray-400 text-lg">Company URL:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-200 text-lg">@Html.DisplayFor(model => model.CompanyURL)</dd>
            </div>
        </dl>
    </div>

    <div class="mt-8 flex space-x-4">
        <a asp-action="Edit" asp-route-id="@Model?.CompanyId" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300 dark:bg-blue-500 dark:hover:bg-blue-600">Edit</a>
        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300 dark:bg-gray-500 dark:hover:bg-gray-600">Back to List</a>
    </div>
</div>
