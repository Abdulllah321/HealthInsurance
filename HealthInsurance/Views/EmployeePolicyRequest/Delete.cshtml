@model HealthInsurance.Entities.PolicyRequestDetails

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6 max-w-lg">
    <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg">
        <h1 class="text-2xl font-bold mb-4 text-gray-800 dark:text-gray-200">Delete Policy Request</h1>
        <h3 class="text-lg font-semibold mb-6 text-red-600 dark:text-red-400">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Policy Request Details</h4>
            <hr class="border-gray-300 dark:border-gray-700 mb-6" />

            <dl class="space-y-4">
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.RequestDate)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.RequestDate)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.Employee)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.Employee.FirstName)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.Policy)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.Policy.PolicyName)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.PolicyAmount)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.PolicyAmount)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.EMI)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.EMI)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.Company)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.Company.CompanyName)</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-400">@Html.DisplayFor(model => model.Status)</dd>
                </div>
            </dl>

            <div class="mt-8 flex justify-between">
                <a asp-action="Index" class="px-5 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700 transition duration-300">
                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                </a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="RequestId" />
                    <button type="submit" class="px-5 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700 transition duration-300">
                        <i class="fas fa-trash-alt mr-2"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
