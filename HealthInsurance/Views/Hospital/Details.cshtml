@model HealthInsurance.Entities.HospitalInfo

@{
    ViewData["Title"] = "Hospital Details";
}

<div class="container mx-auto p-4">
    <h1 class="text-4xl font-bold mb-6">Hospital Details</h1>

    <div class="bg-white shadow-lg rounded-lg p-6 dark:bg-gray-800 dark:shadow-md">
        <h4 class="text-2xl font-semibold mb-4">Hospital Information</h4>
        <hr class="border-gray-300 mb-4 dark:border-gray-600" />
        <dl class="space-y-4">
            <div class="flex">
                <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">Hospital Name:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.HospitalName)</dd>
            </div>
            <div class="flex">
                <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">Phone Number:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.PhoneNo)</dd>
            </div>
            <div class="flex">
                <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">Location:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.Location)</dd>
            </div>
            <div class="flex">
                <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">URL:</dt>
                <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.Url)</dd>
            </div>
        </dl>
    </div>

    <div class="mt-6 flex items-center">
        <a asp-action="Edit" asp-route-id="@Model?.HospitalId" class="flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-semibold mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
                <path strokeLinecap="round" strokeLinejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>

            Edit
        </a>
        <a asp-action="Index" class="flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-semibold">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>

            Back to List
        </a>
    </div>
</div>
