@model HealthInsurance.Entities.HospitalInfo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-3xl font-bold mb-6">Edit Hospital</h1>

<h4 class="text-xl font-semibold mb-4">Hospital Details</h4>
<hr class="mb-6 border-t-2 border-gray-300" />

<div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-8">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-6"></div>

        <!-- Hidden input for HospitalId -->
        <input type="hidden" asp-for="HospitalId" />

        <div class="mb-6">
            <label for="HospitalName" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Hospital Name</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="HospitalName" id="HospitalName" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Hospital Name" />
                <span asp-validation-for="HospitalName" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="PhoneNo" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Phone Number</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="PhoneNo" id="PhoneNo" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNo" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Location" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Location</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Location" id="Location" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Location" />
                <span asp-validation-for="Location" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Url" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">URL</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Url" id="Url" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="URL" />
                <span asp-validation-for="Url" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="flex justify-end mb-4">
            <input type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out" />
        </div>
    </form>
</div>

<div class="mt-6 text-center">
    <a asp-action="Index" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    