@model HealthInsurance.Entities.Policy

@{
    ViewData["Title"] = "Delete Policy";
}

<h1 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Delete Policy</h1>
<h3 class="text-lg font-medium mb-6 text-gray-600 dark:text-gray-400">Are you sure you want to delete this policy?</h3>

<div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-8">
    <h4 class="text-xl font-semibold mb-4">Policy Details</h4>
    <hr class="mb-6 border-t-2 border-gray-300 dark:border-gray-600" />

    <dl class="space-y-4">
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">@Html.DisplayNameFor(model => model.PolicyName)</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.PolicyName)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">@Html.DisplayNameFor(model => model.PolicyDescription)</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.PolicyDescription)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">@Html.DisplayNameFor(model => model.Amount)</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.Amount)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">@Html.DisplayNameFor(model => model.Emi)</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.Emi)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">Company Details</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.CompanyDetails.Address)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700 dark:text-gray-300">Hospital Info</dt>
            <dd class="w-2/3 text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.HospitalInfo.HospitalId)</dd>
        </div>
    </dl>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="PolicyId" />
        <div class="flex items-center justify-between mt-4">
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition cursor-pointer duration-150 ease-in-out">Delete</button>
            <a asp-action="Index" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm">Back to List</a>
        </div>
    </form>
</div>
