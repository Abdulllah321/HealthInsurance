@model HealthInsurance.Entities.Policy

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-3xl font-bold mb-6">Edit Policy</h1>

<h4 class="text-xl font-semibold mb-4">Policy Details</h4>
<hr class="mb-6 border-t-2 border-gray-300 dark:border-gray-600" />

<div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-8">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-6"></div>
        <input type="hidden" asp-for="PolicyId" />

        <div class="mb-6">
            <label for="PolicyName" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Policy Name</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="PolicyName" id="PolicyName" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Policy Name" />
                <span asp-validation-for="PolicyName" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="PolicyDescription" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Policy Description</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="PolicyDescription" id="PolicyDescription" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Policy Description" />
                <span asp-validation-for="PolicyDescription" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Amount" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Amount</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Amount" id="Amount" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="Amount" />
                <span asp-validation-for="Amount" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="Emi" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">EMI</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <input asp-for="Emi" id="Emi" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" placeholder="EMI" />
                <span asp-validation-for="Emi" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="CompanyId" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Company</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <select asp-for="CompanyId" id="CompanyId" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="mb-6">
            <label for="MedicalId" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Medical ID</label>
            <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm flex-col">
                <select asp-for="MedicalId" id="MedicalId" class="dark:bg-white/5 block w-full border-0 rounded-lg focus:ring-blue-500 focus:ring-opacity-50 pl-3 py-2" asp-items="ViewBag.MedicalId"></select>
                <span asp-validation-for="MedicalId" class="text-red-500 text-sm ml-2"></span>
            </div>
        </div>

        <div class="flex justify-end mb-4">
            <input type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out" />
        </div>
    </form>
</div>

<div class="mt-6 text-center">
    <a asp-action="Index" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    };
}
