@model HealthInsurance.Entities.PolicyApprovalDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-6">Create Policy Approval</h1>

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400 mb-4"></div>

        <!-- RequestId Select Box -->
        <div class="mb-6">
            <label asp-for="RequestId" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">
                <i class="fas fa-id-card mr-2"></i>@Html.DisplayNameFor(model => model.RequestId)
            </label>
            <select asp-for="RequestId" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-900 dark:text-gray-300" asp-items="ViewBag.RequestId">
                <option value="">-- Select Request --</option>
            </select>


            <span asp-validation-for="RequestId" class="text-red-600 dark:text-red-400 text-sm"></span>
        </div>

        <!-- PolicyId Select Box -->
        <div class="mb-6">
            <label asp-for="PolicyId" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">
                <i class="fas fa-file-alt mr-2"></i>@Html.DisplayNameFor(model => model.PolicyId)
            </label>
            <select asp-for="PolicyId" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-900 dark:text-gray-300" asp-items="ViewBag.PolicyId">
                <option value="">-- Select Policy --</option>
            </select>
            <span asp-validation-for="PolicyId" class="text-red-600 dark:text-red-400 text-sm"></span>
        </div>

        <!-- Date Input -->
        <div class="mb-6">
            <label asp-for="Date" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">
                <i class="fas fa-calendar-alt mr-2"></i>@Html.DisplayNameFor(model => model.Date)
            </label>
            <input asp-for="Date" class="form-control w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-900 dark:text-gray-300" />
            <span asp-validation-for="Date" class="text-red-600 dark:text-red-400 text-sm"></span>
        </div>

        <!-- Amount Input -->
        <div class="mb-6">
            <label asp-for="Amount" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">
                <i class="fas fa-dollar-sign mr-2"></i>@Html.DisplayNameFor(model => model.Amount)
            </label>
            <input asp-for="Amount" class="form-control w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-900 dark:text-gray-300" />
            <span asp-validation-for="Amount" class="text-red-600 dark:text-red-400 text-sm"></span>
        </div>

        <!-- Reason Input -->
        <div class="mb-6">
            <label asp-for="Reason" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">
                <i class="fas fa-reason mr-2"></i>@Html.DisplayNameFor(model => model.Reason)
            </label>
            <input asp-for="Reason" class="form-control w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-900 dark:text-gray-300" />
            <span asp-validation-for="Reason" class="text-red-600 dark:text-red-400 text-sm"></span>
        </div>

        <!-- Approved Toggle -->
        <div class="space-y-2">
            <label class="flex items-center">
                <input type="checkbox" asp-for="Approved" class="mr-2" />
                @Html.DisplayNameFor(model => model.Approved)
            </label>
        </div>


        <!-- Submit Button -->
        <div class="flex items-center gap-4 flex-row-reverse mt-8">
            <div class="w-full">
                <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 dark:bg-blue-700 dark:hover:bg-blue-800 rounded-lg py-3 font-medium text-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out">
                    Create
                </button>
            </div>
            <div class="text-center whitespace-nowrap">
                <a asp-action="Index" class="inline-flex items-center text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-150 ease-in-out">
                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggle = document.getElementById('approvedToggle');
            const dot = document.querySelector('.dot');
            const block = document.querySelector('.checkboxBlock');

            // Function to update toggle appearance based on checkbox state
            function updateToggle() {
                if (toggle.checked) {
                    dot.style.transform = 'translateX(100%)';
                    block.style.backgroundColor = '#4CAF50'; // Green color when checked
                } else {
                    dot.style.transform = 'translateX(0)';
                    block.style.backgroundColor = '#ccc'; // Gray color when not checked
                }
            }

            // Initial state update
            updateToggle();

            // Event listener to update on change
            toggle.addEventListener('change', updateToggle);
        });
    </script>
}
