@model HealthInsurance.Entities.PolicyApprovalDetails

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Policy Approval Details</h1>

    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
        <h4 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Policy Approval Details</h4>
        <hr class="border-gray-300 dark:border-gray-700 mb-4" />

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-blue-500 dark:text-blue-400 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m0 0H4m4 0h4m-4 4h4m-4 4h4m-4 4h4m-4-4v4m0 0H4m4-4h4" />
                </svg>
                <dt class="font-medium text-gray-700 dark:text-gray-300">
                    @Html.DisplayNameFor(model => model.Policy)
                </dt>
                <dd class="ml-3 text-gray-900 dark:text-gray-100">
                    @Html.DisplayFor(model => model.Policy.PolicyName)
                </dd>
            </div>

            <div class="flex items-center">
                <svg class="w-6 h-6 text-green-500 dark:text-green-400 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7m-7-7l7-7-7 7" />
                </svg>
                <dt class="font-medium text-gray-700 dark:text-gray-300">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="ml-3 text-gray-900 dark:text-gray-100">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </div>

            <div class="flex items-center">
                <svg class="w-6 h-6 text-yellow-500 dark:text-yellow-400 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 2m-6 2h6m-6-6h6m-6-4v2m0 4v-2m0 6v-2m0 4v-2" />
                </svg>
                <dt class="font-medium text-gray-700 dark:text-gray-300">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="ml-3 text-gray-900 dark:text-gray-100">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
            </div>

            <div class="flex items-center">
                <svg class="w-6 h-6 text-green-600 dark:text-green-300 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 2m-6 2h6m-6-6h6m-6-4v2m0 4v-2m0 6v-2m0 4v-2" />
                </svg>
                <dt class="font-medium text-gray-700 dark:text-gray-300">
                    @Html.DisplayNameFor(model => model.Approved)
                </dt>
                <dd class="ml-3 text-gray-900 dark:text-gray-100">
                    @Html.DisplayFor(model => model.Approved)
                </dd>
            </div>

            <div class="flex items-center">
                <svg class="w-6 h-6 text-purple-500 dark:text-purple-400 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h4V6H3v4zm0 4h4v-4H3v4zm6-4h4V6h-4v4zm0 4h4v-4h-4v4zm6-4h4V6h-4v4zm0 4h4v-4h-4v4z" />
                </svg>
                <dt class="font-medium text-gray-700 dark:text-gray-300">
                    @Html.DisplayNameFor(model => model.Reason)
                </dt>
                <dd class="ml-3 text-gray-900 dark:text-gray-100">
                    @Html.DisplayFor(model => model.Reason)
                </dd>
            </div>
        </dl>
    </div>

    <div class="mt-6 flex space-x-4">
        <a asp-action="Index" class="bg-gray-500 text-white hover:bg-gray-600 rounded-md px-4 py-2 flex items-center">
            <i class="fas fa-arrow-left mr-2"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="bg-blue-500 text-white hover:bg-blue-600 rounded-md px-4 py-2 flex items-center">
            <i class="fas fa-edit mr-2"></i> Edit
        </a>
    </div>
</div>
