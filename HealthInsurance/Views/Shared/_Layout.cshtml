@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthInsurance</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthInsurance.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link href="https://fonts.googleapis.com/css2?family=Baskervville+SC:wght@400;700&family=Raleway:wght@400;600;900&display=swap" rel="stylesheet" />
    <script>
    tailwind.config = {
     theme: {
    extend: {
      screens: {
        'dark': {'raw': '(prefers-color-scheme: dark)'},
      }
    }
  }
  }
  </script>
    <script>
        // Auto-enable dark mode based on user preference
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-200 transition-colors duration-300" style="font-family: 'Raleway', sans-serif;">

@if (Context.User.Identity.Name != null)
{
    <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
        <div class="px-3 py-3 lg:px-5 lg:pl-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center justify-start rtl:justify-end">
                    <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                        <span class="sr-only">Open sidebar</span>
                        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
                        </svg>
                    </button>
                    <a class="text-3xl font-extrabold tracking-wide text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-600" style="font-family: 'Baskervville SC', serif;" asp-area="" asp-controller="Home" asp-action="Index">HealthInsurance</a>
                </div>
                <div class="flex items-center">
                    <div class="flex items-center ms-3">
                        <div>
                            <button type="button" class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" aria-expanded="false" data-dropdown-toggle="dropdown-user">
                                <span class="sr-only">Open user menu</span>
                                <img class="w-8 h-8 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo">
                            </button>
                        </div>
                        <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow dark:bg-gray-700 dark:divide-gray-600" id="dropdown-user">
                            <div class="px-4 py-3" role="none">
                                <p class="text-sm text-gray-900 dark:text-white" role="none">
                                    @Context.User.Identity.Name
                                </p>
                            </div>
                            <ul class="py-1" role="none">
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Dashboard</a>
                                </li>
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Settings</a>
                                </li>
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">Sign out</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
        <aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0 dark:bg-gray-800 dark:border-gray-700" aria-label="Sidebar">
            <div class="h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-gray-800 rounded-tr-lg rounded-br-lg">
                <ul class="space-y-2 font-medium">
                    <li>
                        <a href="/admin" class="flex items-center p-3 text-gray-600 dark:text-gray-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group transition-colors duration-300">
                            <svg class="mr-2 w-6 h-6 text-gray-600 dark:text-gray-400 transition duration-75 group-hover:text-gray-900 dark:group-hover:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                                <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z" />
                                <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z" />
                            </svg>
                            <span class="ms-3 text-lg font-semibold text-gray-600 dark:text-gray-400">Dashboard</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="/admin/companydetails" class="flex items-center p-3 text-gray-600 dark:text-gray-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group transition-colors duration-300">
                                <svg class="mr-2 w-6 h-6 text-gray-600 dark:text-gray-400 transition duration-75 group-hover:text-gray-900 dark:group-hover:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M3 4h14v2H3V4zm0 4h14v2H3V8zm0 4h14v2H3v-2z"></path>
                                </svg>
                                <span class="ms-3 text-lg font-semibold text-gray-600 dark:text-gray-400">Company</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/hospital" class="flex items-center p-3 text-gray-600 dark:text-gray-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group transition-colors duration-300">
                                <svg class="mr-2 w-6 h-6 text-gray-600 dark:text-gray-400 transition duration-75 group-hover:text-gray-900 dark:group-hover:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <!-- Hospital SVG icon -->
                                </svg>
                                <span class="ms-3 text-lg font-semibold text-gray-600 dark:text-gray-400">Hospital</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/policies" class="flex items-center p-3 text-gray-600 dark:text-gray-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group transition-colors duration-300">
                                <svg class="mr-2 w-6 h-6 text-gray-600 dark:text-gray-400 transition duration-75 group-hover:text-gray-900 dark:group-hover:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <!-- Policies SVG icon -->
                                </svg>
                                <span class="ms-3 text-lg font-semibold text-gray-600 dark:text-gray-400">Policies</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Employee"))
                    {
                        <!-- Additional Employee Sidebar Items -->
                    }
                </ul>
            </div>
        </aside>

     
        <div class="p-4 sm:ml-64">
            <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
                @RenderBody()
            </div>
        </div>

}
else
{
    <header>
        <nav class="bg-white dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200 shadow-lg">
            <div class="container mx-auto flex justify-between items-center p-4">
                <a class="text-3xl font-extrabold tracking-wide text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-600" style="font-family: 'Baskervville SC', serif;" asp-area="" asp-controller="Home" asp-action="Index">HealthInsurance</a>
                <button class="lg:hidden text-gray-500 dark:text-gray-400" type="button" id="menu-toggle">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
                <div id="menu" class="hidden lg:flex space-x-6">
                    <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active-nav" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium @(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active-nav" : "")" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active-nav" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>

                    @if (Context.User.Identity.Name != null)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" asp-area="" asp-controller="Auth" asp-action="AdminDashboard">Admin Dashboard</a>
                            <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        }
                        else if (User.IsInRole("Employee"))
                        {
                            <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" asp-area="" asp-controller="Auth" asp-action="EmployeeDashboard">Employee Dashboard</a>
                            <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        }
                    }
                    else
                    {
                        <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" href="/admin/login">Admin Login</a>
                        <a class="text-lg text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium" href="/employee/login">Employee Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <section class="bg-white dark:bg-gray-800 rounded shadow-sm p-6">
        @RenderBody()
    </section>
    <footer class="bg-white dark:bg-gray-800 border-t dark:border-gray-700 border-gray-200 py-6 text-center text-gray-600 dark:text-gray-400">
        <div class="container mx-auto">
            <p class="text-lg">&copy; 2024 - <span class="font-semibold">HealthInsurance</span> - <a href="/privacy" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-600">Privacy</a></p>
        </div>
    </footer>
}

<script>
    document.getElementById('menu-toggle').addEventListener('click', function () {
        document.getElementById('menu').classList.toggle('hidden');
    });
</script>
    <script>
        const sidebarLinks = document.querySelectorAll('#logo-sidebar ul li a');

        function setActiveLink() {
            const currentUrl = window.location.href;
            const currentController = currentUrl.split('/')[3];
            const currentAction = currentUrl.split('/')[4];

            sidebarLinks.forEach((link) => {
                const linkHref = link.getAttribute('href');
                const linkController = linkHref.split('/')[3];
                const linkAction = linkHref.split('/')[4];

                if (linkController === currentController && linkAction === currentAction) {
                    link.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-gray-200');
                } else {
                    link.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-gray-200');
                }
            });
        }

        window.addEventListener('load', setActiveLink);
        window.addEventListener('popstate', setActiveLink);
    </script>

<style>
    .active-nav {
        color: #2563eb; /* Blue 600 */
        border-bottom: 2px solid #2563eb;
        font-weight: bold;
    }
</style>
 
@RenderSection("Scripts", required: false)
</body>
</html>
